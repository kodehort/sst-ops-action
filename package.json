{
  "name": "sst-operations-action",
  "version": "0.4.1",
  "description": "A unified GitHub Action for SST operations: deploy, diff, and remove",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "bunx ultracite@latest format",
    "format:check": "bunx ultracite@latest format --check",
    "lint": "bunx ultracite@latest lint",
    "lint:fix": "bunx ultracite@latest lint --fix",
    "validate": "bun run typecheck && bun run lint && bun run test",
    "dev": "bunx @github/local-action run . src/main.ts .env",
    "snapshots:generate": "bun run scripts/generate-snapshots.ts",
    "snapshots:generate:force": "bun run scripts/generate-snapshots.ts --force",
    "snapshots:validate": "bun run scripts/generate-snapshots.ts --validate",
    "test:snapshots": "vitest run __tests__/snapshots/",
    "prepare": "lefthook install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/sst-operations-action.git"
  },
  "keywords": [
    "github-actions",
    "sst",
    "serverless",
    "infrastructure-as-code",
    "deploy",
    "diff",
    "remove"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.3.2",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/bun": "^1.2.19",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.2.1",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.8",
    "js-yaml": "^4.1.0",
    "lefthook": "^1.12.2",
    "rollup": "^4.46.2",
    "typescript": "^5.9.2",
    "ultracite": "5.1.2",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "sideEffects": false
}

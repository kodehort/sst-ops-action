{
  "name": "sst-operations-action",
  "version": "1.0.0",
  "description": "A unified GitHub Action for SST operations: deploy, diff, and remove",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "bunx ultracite@latest format",
    "lint": "bunx ultracite@latest lint",
    "validate": "bun run typecheck && bun run lint && bun test",
    "prepare": "lefthook install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/sst-operations-action.git"
  },
  "keywords": [
    "github-actions",
    "sst",
    "serverless",
    "infrastructure-as-code",
    "deploy",
    "diff",
    "remove"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.3.2",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^2.0.4",
    "js-yaml": "^4.1.0",
    "lefthook": "^1.7.0",
    "typescript": "^5.9.0-beta",
    "ultracite": "5.1.2",
    "vitest": "^2.0.4",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module"
}
